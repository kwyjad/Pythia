name: "One-off: Refresh web/package-lock.json"

on:
  workflow_dispatch:
    inputs:
      target_branch:
        description: "Branch to update (e.g. PR head branch)"
        required: true
        default: "codex/fix-risk-index-ui-normalize-handling"

permissions:
  contents: write

jobs:
  refresh-lockfile:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout target branch
        uses: actions/checkout@v4
        with:
          ref: ${{ inputs.target_branch }}
          fetch-depth: 0

      - name: Setup Node
        uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "npm"
          cache-dependency-path: web/package-lock.json

      - name: Ensure npm uses public registry
        run: |
          npm config set registry https://registry.npmjs.org/
          npm config get registry

      - name: Regenerate lockfile (web)
        run: |
          rm -rf web/node_modules
          npm install --prefix web --package-lock-only

      - name: Show changes
        run: |
          git status --porcelain
          git diff -- web/package-lock.json || true

      - name: Commit and push if lockfile changed
        run: |
          if git diff --quiet -- web/package-lock.json; then
            echo "No changes to web/package-lock.json; nothing to commit."
            exit 0
          fi

          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"

          git add web/package-lock.json
          git commit -m "web: refresh package-lock.json"
          git push origin HEAD:${{ inputs.target_branch }}
